@model IEnumerable<OAS.Models.fsSubAccnt>

@{
    ViewBag.Title = "Index";
    string vAccnt = "";
}

<h2>Sub Accounts</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">

@foreach (var item in Model)
{

    if (vAccnt != item.fsAccount.AccntTitle)
    {
        vAccnt = item.fsAccount.AccntTitle;
        <tr>
            <th colspan="2">
                <span>@Html.DisplayFor(modelItem => item.fsAccount.AccntNo)-@vAccnt</span>
            </th>
        </tr>
    }

    <tr>
        <td>&nbsp;</td>
        <td>
            @Html.ActionLink(item.Name, "Edit", new { id = item.Id })
            <span style="font-size:small;color:darkgray;font-style:italic">@Html.DisplayFor(modelItem => item.Remarks)</span>
        </td>
    </tr>
}

</table>
